{
  "name": "io-functions-template",
  "description": "",
  "author": "IO team",
  "repository": "https://github.com/pagoPA/io-functions-template",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "extensions:install": "func extensions install",
    "start": "func start",
    "predev": "npm-run-all generate build",
    "dev": "npm-run-all --parallel start watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "tslint -p .",
    "lint-api": "oval validate -p openapi/index.yaml",
    "dist:modules": "modclean -r -n default:safe && npm prune --production",
    "dist:zip": "zip -r dist.zip . --exclude @.funcignore --exclude .funcignore",
    "predeploy": "npm-run-all generate build dist:*",
    "generate:definitions": "shx rm -rf ./generated/definitions && mkdir -p ./generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --out-dir ./generated/definitions",
    "generate": "npm-run-all generate:*"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.15",
    "@types/vfile-message": "^2.0.0",
    "danger": "^8.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "italia-tslint-rules": "*",
    "italia-utils": "^4.1.0",
    "jest": "^24.8.0",
    "jest-mock-express": "^0.1.1",
    "modclean": "^3.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "oval": "^1.0.0",
    "prettier": "^1.18.2",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.7.0"
  },
  "dependencies": {
    "durable-functions": "^1.2.4",
    "express": "^4.15.3",
    "fp-ts": "1.12.0",
    "io-functions-commons": "^1.3.0",
    "io-functions-express": "^0.1.0",
    "io-ts": "1.8.5",
    "italia-ts-commons": "^5.1.11",
    "winston": "^3.2.1"
  }
}
